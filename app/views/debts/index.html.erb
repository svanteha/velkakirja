<h2>List of debts</h2>

<table>
  <thead>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Message</th>
    <th>Amount</th>
  </tr>
  </thead>

  <tbody>
  <% @debts.each do |debt| %>
      <tr>
        <td><%= debt.user.name %></td>
        <td><%= debt.receiver.name %></td>
        <td><%= debt.description %></td>
        <td><%= number_to_currency(debt.amount, :unit => "â‚¬") %></td>
        <td><%= link_to 'delete', debt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

